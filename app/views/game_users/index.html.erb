<p id="notice"><%= notice %></p>

<h1>Game Users</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Game</th>
      <th>Points</th>
      <th>W card 1</th>
      <th>W card 2</th>
      <th>W card 3</th>
      <th>W card 4</th>
      <th>W card 5</th>
      <th>W card 6</th>
      <th>W card 7</th>
      <th>W card 8</th>
      <th>W card 9</th>
      <th>W card 10</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @game_users.each do |game_user| %>
      <tr>
        <td><%= game_user.user_id %></td>
        <td><%= game_user.game_id %></td>
        <td><%= game_user.points %></td>
        <td><%= game_user.w_card_1 %></td>
        <td><%= game_user.w_card_2 %></td>
        <td><%= game_user.w_card_3 %></td>
        <td><%= game_user.w_card_4 %></td>
        <td><%= game_user.w_card_5 %></td>
        <td><%= game_user.w_card_6 %></td>
        <td><%= game_user.w_card_7 %></td>
        <td><%= game_user.w_card_8 %></td>
        <td><%= game_user.w_card_9 %></td>
        <td><%= game_user.w_card_10 %></td>
        <td><%= link_to 'Show', game_user %></td>
        <td><%= link_to 'Edit', edit_game_user_path(game_user) %></td>
        <td><%= link_to 'Destroy', game_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

